@model List<Cekilis>
@{
    ViewData["Title"] = "Çekiliş Sonuçları";
}
<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Çekiliş Sonuçları</h2>
        <a href="/Cekilis/Ekle" class="btn btn-success btn-lg">Yeni Çekiliş Ekle</a>
    </div>
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>#</th>
                <th>Çekiliş Adı</th>
                <th>Katılımcı Sayısı</th>
                <th>Kazanan Sayısı</th>
                <th>Yedek Sayısı</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Count > 0)
            {
                int index = 1;
                foreach (var sonuc in Model)
                {
                    <tr>
                        <td>@index</td>
                        <td>@sonuc.CekilisAdi</td>
                        <td>@sonuc.Katilimcilar.Count</td>
                        <td>@sonuc.KazananSayisi</td>
                        <td>@sonuc.YedekSayisi</td>
                        <td>
                            <a href="/Cekilis/Detay/@sonuc.CekilisID" class="btn btn-primary">Detaylar</a>
                            <form action="/Cekilis/Sil" method="post" style="display:inline;">
                                <input type="hidden" name="id" value="@sonuc.CekilisID" />
                                <button type="submit" class="btn btn-danger">Sil</button>
                            </form>
                        </td>
                    </tr>
                    index++;
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center">Sonuç bulunamadı.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
